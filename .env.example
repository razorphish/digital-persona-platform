# Digital Persona Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite+aiosqlite:///./digital_persona.db

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_VISION_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# AWS S3 CONFIGURATION (Optional - for production file storage)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_ENDPOINT_URL=https://s3.amazonaws.com

# =============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,audio/wav
UPLOAD_DIR=uploads

# =============================================================================
# AI CAPABILITIES CONFIGURATION
# =============================================================================
# Computer Vision
ENABLE_IMAGE_ANALYSIS=true
IMAGE_ANALYSIS_MODELS=openai_vision

# Voice Synthesis
ENABLE_VOICE_SYNTHESIS=true
DEFAULT_TTS_ENGINE=edge  # Options: edge, gtts
EDGE_TTS_VOICE=en-US-JennyNeural

# Memory System
ENABLE_MEMORY_SYSTEM=true
MEMORY_EMBEDDING_MODEL=all-MiniLM-L6-v2
CHROMA_DB_PATH=./chroma_db

# Personality Learning
ENABLE_PERSONALITY_LEARNING=true
LEARNING_CONFIDENCE_THRESHOLD=0.7

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
DEBUG=true
ENVIRONMENT=development  # Options: development, staging, production
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
ENABLE_METRICS=false
METRICS_PORT=9090
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# DEVELOPMENT TOOLS (Development only)
# =============================================================================
# Set to true to enable detailed logging and debugging
VERBOSE_LOGGING=false
ENABLE_TEST_ENDPOINTS=false
