# Local Docker Development Environment Variables
# Copy this to .env for local Docker development

# Application Environment
NODE_ENV=development
PORT=3001

# Database Configuration (Docker PostgreSQL)
DATABASE_URL=postgresql://dpp_admin:local_dev_password@localhost:5432/digital_persona

# JWT Configuration
JWT_SECRET=local-development-jwt-secret-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# S3/MinIO Configuration (Local S3-compatible storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin123
AWS_ENDPOINT_URL=http://localhost:9000
S3_BUCKET=digital-persona-uploads
S3_FORCE_PATH_STYLE=true

# Redis Configuration (Local Redis)
REDIS_URL=redis://localhost:6379

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WEBSITE_URL=http://localhost:3000

# MinIO Console (for file management)
# Access at: http://localhost:9001
# Username: minioadmin
# Password: minioadmin123