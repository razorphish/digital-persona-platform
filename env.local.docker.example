# Local Docker Development Environment Variables
# Copy this to .env for local Docker development

# Application Environment
NODE_ENV=development
PORT=3001

# Database Configuration (Docker PostgreSQL)
DATABASE_URL=postgresql://dpp_admin:local_dev_password@localhost:5432/digital_persona

# JWT Configuration
JWT_SECRET=local-development-jwt-secret-change-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# AWS S3 Configuration (using real AWS S3)
AWS_REGION=us-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_BUCKET=local-mars-dpp-uploads
# Note: No AWS_ENDPOINT_URL - uses real AWS S3

# Redis Configuration (Local Redis)
REDIS_URL=redis://localhost:6379

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WEBSITE_URL=http://localhost:3000

# AWS S3 Console (for file management)
# Access at: https://s3.console.aws.amazon.com/s3/buckets/local-mars-dpp-uploads
# Use your AWS credentials to access